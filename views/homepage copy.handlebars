<header>
  <h1>Welcome to the Tech Blog!</h1>
</header>
<main>
  <aside>
    <h2>Enjoy the technology insights</h2>
  </aside>
  {{#each blogs as |blog| }}
  <div class="row mb-4 project">
    <div class="col-md-5">
      <h2>
        <a href="/blog/{{blog.id}}">{{blog.name}}</a>
      </h2>
      <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{blog.content}}
      </p>
    </div>
    </div>

    {{/each }}
