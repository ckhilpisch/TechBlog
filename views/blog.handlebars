<div class="viewBlog col">
    <div class="card text-center">
      <div class="card-header">
        <h3>{{blog.name}}</h3>

      </div>
      <div class="card-body">
        <h5 class="card-title">By: {{blog.user.name}}</h5>
        <p class="card-text">{{blog.content}}</p>
        <a href="/comment/{{blog.id}}" class="btn btn-primary commentBtn">Leave a Comment</a>
      </div>
      <div class="card-footer text-muted">
        Date Created: {{format_date blog.date_created}}
      </div>

      <div class="header">
        <h4 id="commentHeader">Comment Section:</h4>
      </div>
      {{#if comments.length}}
      {{#each comments as | comment|}}

      <div id="commentSection">
        <p id="commentContent">{{comment.content}}</p>
        <p id="user">By: {{comment.user.name}}</p>
        <p id="update" class="text-muted">Date Commented: {{format_date date_created}}</p>
      </div>

      {{/each}}
      {{/if}}
    </div>
  </div>



<script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>